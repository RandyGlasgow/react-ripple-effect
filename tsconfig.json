{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
